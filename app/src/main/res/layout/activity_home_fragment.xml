<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragmentActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        >

    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/greyimg"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/textem"
        android:layout_marginTop="120sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25sp"
        android:paddingRight="15sp"
        android:paddingLeft="15sp"
        android:text="In case of Emergency press the below Button"></TextView>

        <com.skyfishjy.library.RippleBackground
            android:layout_below="@+id/textem"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ripple"
            app:rb_color="#000"
            app:rb_radius="32sp"
            app:rb_rippleAmount="4"
            app:rb_duration="6000"
            app:rb_scale="6">
    <Button
        android:layout_centerInParent="true"
        android:layout_marginTop="70sp"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:text="Help me"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_round"
        android:id="@+id/redb"/>
        </com.skyfishjy.library.RippleBackground>
    </RelativeLayout>

</LinearLayout>